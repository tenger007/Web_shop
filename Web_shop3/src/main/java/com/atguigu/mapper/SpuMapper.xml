<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.mapper.SpuMapper">

	<insert useGeneratedKeys="true" keyColumn="id" keyProperty="id"
		id="insert_into_t_mall_product_by_spu" parameterType="com.atguigu.bean.T_MALL_PRODUCT">
		insert into
		t_mall_product(
		shp_mch,
		shp_tp,
		flbh1,
		flbh2,
		pp_id,
		shp_msh
		)
		values(
		#{shp_mch},
		#{shp_tp},
		#{flbh1},
		#{flbh2},
		#{pp_id},
		#{shp_msh}
		)
	</insert>

	<insert id="insert_into_t_mall_product_image" parameterType="Map">
		insert into t_mall_product_image(
		shp_id,
		url
		)
		values
		<foreach collection="list" item="img" separator=",">
			(#{shp_id},#{img})
		</foreach>
	</insert>

</mapper>
